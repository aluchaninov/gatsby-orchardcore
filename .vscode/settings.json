{
    "files.exclude": {
      ".git/": true,
      "node_modules/": false,
      "public/": false
    },
    "search.exclude": {
      "**/.cache": true,
      "**/node_modules": true,
      "**/public": true
    },
    "editor.rulers": [80],
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.tslint": true 
    },
    "tslint.jsEnable": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "debug.node.autoAttach": "on",
}