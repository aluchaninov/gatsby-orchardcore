{
	"compilerOptions": {
		"allowJs": true,
		"sourceMap": true,
		"removeComments": true,
		"jsx":"react",

		"lib": ["dom", "esnext"],
		"target": "es2017",

		"declaration": false,

		"noEmit": false,
		"noEmitOnError": true,
		"noErrorTruncation": true,

		// rollup takes care of these
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,

		// TODO: error all the things
		//"strict": true,
		"esModuleInterop": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

    "outDir": "dist",
	},
	"exclude": ["node_modules", "public", "gatsby-source-orchardcore"]
}